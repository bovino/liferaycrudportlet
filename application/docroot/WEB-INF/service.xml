<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" 
"http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.meera.dbservice">
	<author>LiferaySavvy</author>
	<namespace>LS</namespace>

	<!-- Mobile Phone -->
	<entity name="MobilePhone" local-service="true" remote-service="false">
		<!-- PK fields -->
		<column name="mobilePhoneId" type="long" primary="true" />
		<column name="name" type="String" />
		<column name="brand" type="String" />
		<column name="description" type="String" />
		<column name="releaseDate" type="Date" />
		<column name="price" type="double" />
		<!-- Order -->
		<order by="asc">
			<order-column name="mobilePhoneId" />
		</order>
	</entity>
</service-builder>